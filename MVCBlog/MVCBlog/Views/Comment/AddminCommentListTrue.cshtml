@model IEnumerable<EntitiyLayer.Concrete.Comment>
@{
    ViewBag.Title = "AddminCommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <div class="row">

                <div class="card-body">

                    <!-- Post -->
                    @foreach (var item in Model)
                    {
                        <div class="post">

                            <div class="user-block">

                                <img class="img-circle img-bordered-sm" src="/adminLTE-3.0.4/dist/img/user1-128x128.jpg" alt="user image">

                                <span class="username">

                                    <a href="/Blog/BlogDetails/@item.BlogId">@item.UserName - @item.Blog.BlogTitle</a>



                                   

                                </span>

                                <span class="description">@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</span>

                            </div>

                            <!-- /.user-block -->

                            <p>

                                @item.CommentText
                            </p>

                            <p>


                                <span class="float-right">

                                    <a href="/Comment/StatuesChangeToFalse/@item.CommentId" class="link-black text-m">

                                        <i class="fa fa-trash danger" style="color:red"></i> Yorumu Sil

                                    </a>

                                </span>
                                <br />
                            </p>



                        </div>
                    }
                </div>

            </div>

        </div><!-- /.card-body -->



    </section>

</body>

</html>