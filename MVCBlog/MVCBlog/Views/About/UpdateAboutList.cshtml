@model IEnumerable<EntitiyLayer.Concrete.About>
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>UpdateAbout</h2>

<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <div class="row">

            <div class="col-md-12">

                <div class="card card-cyan">

                    <div class="card-header">

                        <h3 class="card-title">Hakkımızda Sayfa Düzenlemesi</h3>

                        <div class="card-tools">

                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                                <i class="fas fa-minus"></i>

                            </button>

                        </div>

                    </div>
                    @using (Html.BeginForm("UpdateAbout", "About", FormMethod.Post))
                    {
                        <div class="card-body">
                            @foreach (var item in Model)
                            {
                                <div class="form-group">

                                    <label for="inputName">İd</label>

                                    <input type="text" name="AboutId" class="form-control" value="@item.AboutId">

                                </div>
                                <div class="form-group">

                                    <label for="inputName">Görsel 1</label>

                                    <input type="text" name="AboutImage1" class="form-control" value="@item.AboutImage1">

                                </div>
                                <div class="form-group">

                                    <label for="inputName">Görsel 2</label>

                                    <input type="text" name="AboutImage2" class="form-control" value="@item.AboutImage2">

                                </div>

                                <div class="form-group">

                                    <label for="inputDescription">Açıklama 1</label>

                                    <textarea name="AboutConcat1" class="form-control" rows="4">@item.AboutConcat1</textarea>

                                </div>
                                <div class="form-group">

                                    <label for="inputDescription">Açıklama 2</label>

                                    <textarea name="AboutConcat2" class="form-control" rows="4">@item.AboutConcat2</textarea>

                                </div>


                            }

                            <button class="btn btn-info">Güncelle</button>
                            <a href="/About/Index" class="btn btn-secondary">Görüntüle</a>


                        </div>
                    }

                    <!-- /.card-body -->

                </div>



            </div>



        </div>



    </section>

</body>

</html>

