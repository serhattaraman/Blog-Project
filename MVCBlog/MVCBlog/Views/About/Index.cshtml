@model IEnumerable<EntitiyLayer.Concrete.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}



<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/miniblog/images/img_4.jpg');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <h1 class="">Hakkımızda</h1>
                    <p class="lead mb-4 text-white"> Yazarlarımızı Tanıyın</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="site-section bg-light">
    <div class="container">
        <div class="row">

            <div class="col-md-6 order-md-2">
                @foreach (var item in Model)
                {
                    <img src="@item.AboutImage1" alt="Image" class="img-fluid">

                }
            </div>
            <div class="col-md-5 mr-auto order-md-1">
                <h2>Biz kimiz?</h2>

                @foreach (var item in Model)
                {

                    <p>@item.AboutConcat1</p>
                }
                <ul class="ul-check list-unstyled success">
                    <li>Her Gün Onlarca Blog Yazısı</li>
                    <li>15' den fazla kategori</li>
                    <li>Günlük 45000+ tekil okumali</li>
                    <li>Yazarlarımızın ortalama 5 yıllık tecrübesi</li>
                    <li>Sosyal Medyalarda 35000+ Üzeri Takipçi</li>

                </ul>
            </div>

        </div>
    </div>
</div>
@Html.Action("MeetTheTeam", "About")


<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @foreach (var item in Model)
                {
                    <img src="@item.AboutImage2" alt="Image" class="img-fluid">
                }
            </div>
            <div class="col-md-5 ml-auto">
                <h2>Neler Yapıyoruz</h2>
                <p class="mb-4">
                    @foreach (var item in Model)
                    {
                        @item.AboutConcat2
                    }
                </p>

                <ul class="ul-check list-unstyled success">
                    <li>Film ve Dizi Yorumları</li>
                    <li>Dünyanın Bir Çok Yerinden Yazılar</li>
                    <li>Son Gelişmiş Teknoloji Haberleri</li>
                    <li>Yeni Çıkan Oyunlar ve İncelemeleri</li>
                    <li>Yeni Çıkan Kitaplar ve İncelemeleri</li>
                    <li>Yeni Çıkan Albümler ve İncelemeleri</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@Html.Action("AddMail", "MailSubscribe")


@Html.Action("Footer", "About")
